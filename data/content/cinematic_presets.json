  "cinematic_movements": {
    "empire_sweep": {
      "name": "Empire Sweep",
      "description": "Sweeping view across an entire empire",
      "duration": 10.0,
      "easing": "ease_in_out",
      "keyframes": [
        {"time": 0.0, "zoom": 0.8, "rotation": 0.0},
        {"time": 0.5, "zoom": 0.5, "rotation": 0.1},
        {"time": 1.0, "zoom": 0.8, "rotation": 0.0}
      ]
    },
    "city_orbit": {
      "name": "City Orbit",
      "description": "Circular orbit around a city",
      "duration": 8.0,
      "easing": "linear",
      "radius_multiplier": 2.0,
      "rotation_speed": 0.785
    },
    "battle_focus": {
      "name": "Battle Focus",
      "description": "Dramatic zoom on battle location",
      "duration": 3.0,
      "easing": "ease_out",
      "initial_zoom": 0.3,
      "final_zoom": 1.5,
      "camera_shake": 0.05
    },
    "trade_route_follow": {
      "name": "Trade Route Follow",
      "description": "Follow a trade route from start to end",
      "duration": 12.0,
      "easing": "ease_in_out",
      "zoom": 0.7,
      "follow_speed": 0.08
    },
    "rise_and_fall": {
      "name": "Rise and Fall",
      "description": "Zoom out to show empire growth then collapse",
      "duration": 20.0,
      "easing": "ease_in_out",
      "zoom_curve": [
        {"time": 0.0, "zoom": 1.0},
        {"time": 0.3, "zoom": 0.5},
        {"time": 0.7, "zoom": 0.3},
        {"time": 1.0, "zoom": 0.8}
      ]
    },
    "establish_shot": {
      "name": "Establishing Shot",
      "description": "Wide view of the world",
      "duration": 5.0,
      "easing": "ease_out",
      "zoom": 0.2,
      "pan_speed": 0.01
    },
    "dramatic_zoom": {
      "name": "Dramatic Zoom",
      "description": "Quick zoom to point of interest",
      "duration": 1.5,
      "easing": "ease_in",
      "start_zoom": 0.3,
      "end_zoom": 2.0
    },
    "slow_pan": {
      "name": "Slow Pan",
      "description": "Gentle pan across landscape",
      "duration": 15.0,
      "easing": "linear",
      "zoom": 0.6,
      "pan_speed": 0.02
    }
  },
  
