//! Living Worlds Base Configuration - Audio Settings
//! 
//! This file contains all audio generation parameters.
//! Mods can override these values to change the soundscape.

AudioConfig(
    // ========================================================================
    // SOUND EFFECTS
    // ========================================================================
    effects: SoundEffects(
        // UI sounds
        button_click_volume: 0.5,
        menu_open_volume: 0.4,
        menu_close_volume: 0.4,
        
        // Notification sounds
        notification_volume: 0.6,
        warning_volume: 0.8,
        error_volume: 0.7,
        
        // Game event sounds
        war_declaration_volume: 0.9,
        nation_destroyed_volume: 0.8,
        milestone_reached_volume: 0.7,
    ),
    
    // ========================================================================
    // AMBIENT SOUNDS
    // ========================================================================
    ambient: AmbientConfig(
        // Ocean waves
        ocean_volume: 0.2,
        ocean_fade_distance: 500.0,
        
        // Wind
        wind_volume: 0.15,
        wind_intensity_by_elevation: true,
        
        // Birds/wildlife
        wildlife_volume: 0.1,
        wildlife_by_terrain: true,
        
        // Weather
        rain_volume: 0.3,
        thunder_volume: 0.6,
    ),
)